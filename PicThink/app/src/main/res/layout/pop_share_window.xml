<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="微博"
        android:textSize="14sp"
       android:drawablePadding="5dp"
        android:gravity="center"
        android:drawableTop="@mipmap/live_share_weibo"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textSize="14sp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:drawableTop="@mipmap/live_share_weixin"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="朋友圈"
        android:textSize="14sp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:drawableTop="@mipmap/live_share_pengyq"
        />
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@mipmap/live_share_qq"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="QQ空间"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@mipmap/live_share_kongjian"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="口令"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@mipmap/live_share_kouling"
            />
    </LinearLayout>
</LinearLayout>
