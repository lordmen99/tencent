<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mb.picthinklive.weight.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/fragment_most_new_shu"
                        android:drawablePadding="5dip"
                        android:text="达人推荐"
                        android:textColor="#484848"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fragment_most_new_more" />
                </LinearLayout>

                <com.mb.picthinklive.weight.MyGridView
                    android:id="@+id/fragment_most_new_daren_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:verticalSpacing="10dip"
                    android:scrollbars="none" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/fragment_most_new_shu"
                    android:drawablePadding="5dip"
                    android:text="最新直播"
                    android:textColor="#484848"
                    android:textSize="14sp"
                    android:padding="10dip"/>
                <com.mb.picthinklive.weight.MyGridView
                    android:id="@+id/fragment_most_new_onair_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:verticalSpacing="10dip"
                    android:scrollbars="none" />
            </LinearLayout>


        </LinearLayout>
    </com.mb.picthinklive.weight.MyScrollView>


</LinearLayout>
