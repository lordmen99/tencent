<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.mb.picthinklive.SetHeadActivity">

    <include layout="@layout/common_top_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="#484848"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="60dip"
            android:layout_height="60dip">

            <ImageView
                android:id="@+id/set_head_head_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/set_head_toux" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/set_head_camera" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="15dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#484848"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/set_head_nickname_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入您的昵称 >"
            android:textColorHint="#A5A5A5"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#F5F5F5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="15dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务条款"
            android:textColor="#484848"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/set_head_boy_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:descendantFocusability="blocksDescendants">

                <CheckBox
                    android:id="@+id/set_head_boy_checkbox"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/set_head_selector_checkbox_sex"
                    android:button="@null"
                    android:checked="true"
                    android:enabled="false"
                    android:focusable="false"
                    android:clickable="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="男"
                    android:textColor="#484848"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_head_girl_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:orientation="horizontal"
                android:descendantFocusability="blocksDescendants">

                <CheckBox
                    android:id="@+id/set_head_girl_checkbox"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/set_head_selector_checkbox_sex"
                    android:button="@null"
                    android:checked="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:clickable="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:text="女"
                    android:textColor="#484848"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/set_head_save_btn"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/start_corner_yellow"
        android:text="保存"
        android:textColor="@color/tencent_tls_ui_white"
        android:textSize="16sp" />
</LinearLayout>
