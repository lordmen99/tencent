<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/member_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:id="@+id/message_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@mipmap/live_message"
        />


    <TextView

        android:id="@+id/tv_shopping"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/message_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/live_shopping"
        />
    <TextView

        android:id="@+id/tv_friends"
        android:layout_toLeftOf="@+id/tv_share"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/live_comment"
        />
    <TextView

        android:id="@+id/tv_share"
        android:layout_toLeftOf="@+id/tv_vrprop"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/live_share"
        />
    <TextView

        android:id="@+id/tv_vrprop"
        android:layout_toLeftOf="@+id/tv_close"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/live_prop"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/member_send_good"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="102dp"
        android:background="@drawable/icon_like"
        />

    <TextView

        android:id="@+id/tv_close"
        android:layout_marginRight="10dp"
       android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/live_off"
        />
</RelativeLayout>
</LinearLayout>
