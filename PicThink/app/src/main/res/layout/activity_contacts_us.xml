<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="com.mb.picvisionlive.ContactsUsActivity">
    <include layout="@layout/common_top_view" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邮编"
            android:textColor="#484848"
            android:textSize="14sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201901"
            android:textSize="14sp"
            android:textColor="#AAAAAA"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#F5F5F5"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="邮箱"
            android:textColor="#484848"
            android:textSize="14sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zhiboshiping@mjfsfd.cn"
            android:textSize="14sp"
            android:textColor="#AAAAAA"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contacts_service_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/onclick_approve"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip"
android:layout_marginTop="10dip"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="客服电话"
            android:textColor="#484848"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/contact_us_dial_a"
           />


    </LinearLayout>
</LinearLayout>
