<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8D150"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="20dip"
    android:paddingBottom="30dip">
    <RelativeLayout
        android:layout_width="80dip"
        android:layout_height="80dip">
        <ImageView
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerInParent="true"
            android:src="@mipmap/common_circle_bg"/>
        <ImageView
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:layout_centerInParent="true"
            android:src="@mipmap/toux1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/common_big_v"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/top4_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_main_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dip"
            android:drawableRight="@mipmap/common_female"
            android:text="小喵"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:background="@drawable/fragment_person_info_corner_orange"
            android:drawableLeft="@mipmap/fragment_person_info_wujaioxing"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="10"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fperson_main_fan_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/person_main_look_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注  233"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/person_main_fan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝  685"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:gravity="center">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/common_huanggaun"/>

        <TextView
            android:id="@+id/person_main_check_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证:  妖精"
            android:textColor="#52F4C5"
            android:textSize="12sp"
            android:layout_marginLeft="10dip"/>
    </LinearLayout>
</LinearLayout>
