<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="com.mb.picvisionlive.SettingActivity">
    <include layout="@layout/common_top_view" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setting_safe_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/onclick_approve"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dip"
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="账号与安全"
                    android:textColor="#484848"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/common_arrow_right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_blacklist_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/onclick_approve"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dip"
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="黑名单"
                    android:textColor="#484848"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/common_arrow_right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_send_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/onclick_approve"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dip"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="推送管理"
                    android:textColor="#484848"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/common_arrow_right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_cache_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/onclick_approve"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dip"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:textColor="#484848"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.4"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_about_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/onclick_approve"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dip"
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="#484848"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/common_arrow_right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_suggest_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/onclick_approve"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dip"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户反馈"
                    android:textColor="#484848"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/common_arrow_right" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="30dip"
                android:layout_marginBottom="30dip"
                android:background="@drawable/more_daren_corner_red"
                android:text="退出登录"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
