<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="com.mb.picvisionlive.AccountSafeActivity">
    <include layout="@layout/common_top_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dip"
        android:layout_marginTop="10dip"
        android:background="#FFFFFF"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/account_safe_dunpai"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dip">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安全等级:"
        android:textColor="#484848"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高"
        android:textColor="@color/color_bg_red"
        android:textSize="14sp"/>
</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_bind_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/onclick_approve"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip"
        android:layout_marginTop="10dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机绑定"
            android:textColor="#484848"
            android:textSize="14sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15256565655"
            android:textColor="#AAAAAA"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
