    <RadioGroup
        android:id="@+id/rg_share"
        android:layout_below="@id/rg"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:button="@drawable/publishlive_weibo_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:button="@drawable/publishlive_pengyouquan_selector"
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:button="@drawable/publishlive_weixin_selector"
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:button="@drawable/publishlive_qq_selector"
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:button="@drawable/publishlive_qqzone_selector"
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_height="wrap_content"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/btn_publish"
        android:layout_below="@id/rg_share"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:text="开始直播"
        android:gravity="center"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_text_yellow"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:background="@mipmap/publishlive_start"
        />
