<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/publishlive_bg"

    >

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@mipmap/publishlive_guanbi"
            />

    <EditText
        android:id="@+id/et_title"
        android:layout_below="@id/iv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:hint="@string/text_live_title_input"
        android:lines="4"
        android:maxLength="32"
        android:background="@null"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_below="@id/et_title"
        android:layout_width="match_parent"
          android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_zhibo"
            android:button="@null"
            android:layout_width="wrap_content"
            android:background="@drawable/publishlive_start_selector"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="7dp"
            android:layout_height="wrap_content"
            android:text="直播"
            android:textSize="14sp"
            />
        <RadioButton
            android:button="@null"
        android:layout_width="wrap_content"
            android:background="@drawable/publishlive_start_selector"
            android:gravity="center"
            android:padding="7dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="秘密直播"
            android:textSize="14sp"
        />
        <RadioButton
            android:button="@null"
        android:layout_width="wrap_content"
            android:background="@drawable/publishlive_start_selector"
            android:gravity="center"
            android:padding="7dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="VR直播"
            android:textSize="14sp"
        />
        <RadioButton
            android:button="@null"
        android:layout_width="wrap_content"
            android:background="@drawable/publishlive_start_selector"
            android:gravity="center"
            android:padding="7dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="PK直播"
            android:textSize="14sp"
        />
    </RadioGroup>

