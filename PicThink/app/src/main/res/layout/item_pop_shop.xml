<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="140dp">
    <TextView
        android:id="@+id/tv_goodsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="面膜"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_text_black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/iv_goodsiamge"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/live_shop_pic"
            />
        <TextView
            android:id="@+id/tv_goodscontent"
            android:layout_toRightOf="@id/iv_goodsiamge"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_text_black"
            android:text="美肤宝面膜贴女补水保湿控油收缩毛孔的哟"
            android:singleLine="true"
            android:maxEms="15"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_goodsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_below="@id/tv_goodscontent"
            android:layout_toRightOf="@id/iv_goodsiamge"
            android:text="219"
            android:textColor="@color/color_text_orange_red"
            />

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_goodscontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_subtract"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                android:background="@mipmap/subtract" />

            <EditText
                android:id="@+id/et_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@mipmap/ic_num"
                android:gravity="center"
                android:inputType="number"
                android:text="1"
                android:padding="2dp"
                android:focusable="false"
                android:enabled="false"
                android:textColor="@color/color_text_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                android:background="@mipmap/add" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
